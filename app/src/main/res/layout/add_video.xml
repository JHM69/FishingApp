<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/TitleTextET"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/edit_post"
                        android:fontFamily="@font/bold"
                        android:gravity="top"
                        android:hint="Title"
                        android:paddingTop="10dp"
                        android:textColor="#F0F2FF"
                        android:textColorHint="#F0F2FF" />

                    <TextView
                        android:id="@+id/dateTimeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunitosans_semibold"
                        android:text="12:34, 12-3-2020"
                        android:textColor="#F0F2FF"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/postTextET"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/edit_post"
                    android:fontFamily="@font/medium"
                    android:gravity="top"
                    android:hint="Text Content..."
                    android:paddingTop="10dp"
                    android:textColor="#F0F2FF"
                    android:textColorHint="#F0F2FF" />
                <EditText
                    android:id="@+id/linkET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_post"
                    android:fontFamily="@font/medium"
                    android:gravity="top"
                    android:hint="Video link"
                    android:paddingTop="10dp"
                    android:textColor="#F0F2FF"
                    android:textColorHint="#F0F2FF" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/ripple"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/addImg"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_gravity="center"
                        android:padding="1dp" />
                </com.balysv.materialripple.MaterialRippleLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/addPhotoBtn"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_background"
                        android:fontFamily="@font/nunitosans_semibold"
                        android:text="Add Thumb (1280*720)"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">


                <Button
                    android:id="@+id/addCatagory"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:text="Set Category"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/nunitosans_extrabold"
                    android:text="Cancel"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/postBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/nunitosans_extrabold"
                    android:text="Post"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
