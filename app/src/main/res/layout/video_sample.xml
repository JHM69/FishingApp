<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmer_view_container"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/Nex"
            android:layout_width="match_parent"
            android:layout_height="187dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="3dp"
            app:cardBackgroundColor="#2A414E"
            app:cardCornerRadius="@dimen/corner"
            app:cardElevation="6dp"
            app:cardPreventCornerOverlap="false"
            tools:ignore="MissingConstraints">


            <ImageView
                android:id="@+id/postImg"
                android:layout_width="391dp"
                android:layout_height="187dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:scaleX="1.2"
                android:scaleY="1.2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@drawable/post_back"
                android:gravity="bottom|clip_horizontal"
                android:orientation="vertical"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/postTitleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/medium"
                    android:textColor="#E3FFF6"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_access_time_black_24dp" />

                        <TextView
                            android:id="@+id/dateTV"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/light"
                            android:textColor="#E4E3FFF6"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:gravity="center|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_comment_black_24dp" />

                        <TextView
                            android:id="@+id/commentCountTV"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:fontFamily="@font/light"
                            android:textColor="#D5FCFF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center|fill_horizontal"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/play" />

        </androidx.cardview.widget.CardView>
    </FrameLayout>
</com.facebook.shimmer.ShimmerFrameLayout>