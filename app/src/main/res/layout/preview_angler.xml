<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nextP"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="3dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardPreventCornerOverlap="false">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/naa"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/img"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="left"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="90"
            card_view:cardBackgroundColor="#97C1D6"
            card_view:cardCornerRadius="27dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            card_view:cardBackgroundColor="#97C1D6"
            card_view:cardCornerRadius="10dp"
            card_view:layout_constraintEnd_toStartOf="@+id/call"
            card_view:layout_constraintStart_toEndOf="@+id/img"
            card_view:layout_constraintTop_toTopOf="@+id/img" />

        <androidx.cardview.widget.CardView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="3dp"
            card_view:cardBackgroundColor="#97C1D6"
            card_view:cardCornerRadius="8dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/img"
            card_view:layout_constraintEnd_toStartOf="@+id/call"
            card_view:layout_constraintStart_toEndOf="@+id/img" />

        <androidx.cardview.widget.CardView
            android:id="@+id/fb"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            card_view:cardBackgroundColor="#50A1CF"
            card_view:cardCornerRadius="18dp"
            card_view:cardElevation="10dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/call"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            card_view:cardBackgroundColor="#0FBD83"
            card_view:cardCornerRadius="18dp"
            card_view:cardElevation="10dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/fb"
            card_view:layout_constraintEnd_toStartOf="@+id/fb"
            card_view:layout_constraintTop_toTopOf="@+id/fb"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>